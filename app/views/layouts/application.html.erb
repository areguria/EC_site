<!DOCTYPE html>
<html>
  <head>
    <title>ECSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
<nav class="navbar navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
          <span class="logo" style="color: pink;">EC_site(LOGO)</span>
        </nav>
  <ul class="nav navbar-nav navbar-right">
    <% if customer_signed_in? %>
    <li>
      <%= link_to "商品一覧",'#', class:'border' %>
    </li>
    <li>
      <%= link_to 'カート','#', class:'border' %>
    </li>
    <li>
      <%= link_to 'ユーザー名','#', class:'border' %>
    </li>
    <li>
      <%= link_to "ログアウト",destroy_customer_session_path,method: :delete,class:'border' %>
    </li>
    <% elsif admin_signed_in? %>
    <li>
      <%= link_to '商品一覧','#' %>
    </li>
    <li>
      <%= link_to '会員一覧','#' %>
    </li>
    <li>
      <%= link_to '注文一覧','#' %>
    </li>
    <li>
      <%= link_to 'ジャンル編集','#' %>
    </li>

      <% else %>

      <li>
      <%= link_to "商品一覧",'#', class:'border' %>
    </li>
    <li>
      <%= link_to 'ログイン',new_customer_session_path, class:'border' %>
    </li>
    <li>
      <%= link_to 'サインイン',new_customer_registration_path,class:'border' %>
    </li>
  <% end %>
</ul>
  </div>
</nav>
</header>
  <body>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
