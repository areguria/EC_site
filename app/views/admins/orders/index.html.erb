<h2>注文一覧画面</h2>

<table class="table table-bordered">
	<tr>
		<th>購入日時</th>
		<th>購入者</th>
		<th>注文個数</th>
		<th>注文ステータス</th>
	</tr>
	<%= form_with do |f| %>
	<tr>
		<td><%= f.created_at.strftime("%Y-%m-%d %H:%M") %></td>
		<td><%= f.name %></td>
		<td><%= f.counts %></td>
		<td><%= f.status %></td>
	</tr>
	<% end %>
</table>