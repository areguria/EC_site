<h2>配送先登録/一覧</h2>

<table class="table table-bordered">
　　<%= form_for @delivery,url:customers_deliveries_path do |f| %>
	<tr>
		<th>郵便番号</th>
		<td>
			<%= f.number_field :zip_code %>
		</td>
	</tr>
	<tr>
		<th>住所</th>
		<td>
			<%= f.text_field :address,class:"delivery-index-form" %>
		</td>
	</tr>
	<tr>
		<th>宛名</th>
		<td>
			<%= f.text_field :name %>
		</td>
	</tr>
</table>
	<%= f.submit '登録',class:'btn btn-success' %>
		<% end %>

<table class="table table-bordered">
	<tr>
		<th>郵便番号</th>
		<th>住所</th>
		<th>宛名</th>
		<th></th>
	</tr>
	<%  @deliveries.each do |delivery| %>
	<tr>
		<td><%= delivery.zip_code %></td>
		<td><%= delivery.address %></td>
		<td><%= delivery.name %></td>
		<td>
			<%= link_to '編集する',edit_customers_delivery_path(delivery),class: "btn btn-info" %>
			<%= link_to '削除する',customers_delivery_path(delivery),class: "btn btn-danger",method: :delete, data:{ confirm: "本当に削除しますか？"} %>
		</td>
	</tr>
	<% end %>
</table>