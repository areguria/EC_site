<h2>注文履歴一覧</h2>

<table class="table table-bordered">
	<tr>
		<th>注文日</th>
		<th>配送先</th>
		<th>注文商品</th>
		<th>支払金額</th>
		<th>ステータス</th>
		<th>注文詳細</th>
	</tr>
	<% @orders.each do |order| %>
	<tr>
		<td><%= order.created_at %></td>
		<td>
		  <%= order.zip_code %></br>
		  <%= order.address %></br>
          <%= order.name %>
	    </td>
	    <td>
	    <% order.order_records.each do |order_record| %>
			<%= order_record.product.name %> <br>
		<% end %>
		</td>
		<td><%= order.order_records.sum(:end_price) %></td>
		<td>入金確認</td>
		<td>
		   <%=link_to "表示する",customers_order_path(order),class: "btn btn-info" %>
		</td>
	</tr>
	<% end %>
</table>