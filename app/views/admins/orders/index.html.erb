<h2>注文一覧画面</h2>

<table class="table table-bordered">
	<tr>
		<th>購入日時</th>
		<th>購入者</th>
		<th>注文個数</th>
		<th>注文ステータス</th>
	</tr>
	<% @orders.each do |order| %>
	<%= link_to admins_order_path(order) do %>
	<tr>
		<td>
			<%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
		</td>
		<td>
			<%= order.customer_id %>
		</td>
		<td></td>
		<td>
			<%= order.status %>
		</td>
	</tr>
	<% end %>
	<% end %>
</table>