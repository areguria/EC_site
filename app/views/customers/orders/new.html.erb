<h2>購入情報入力</h2>

<h3>支払方法</h3>
<%= form_with do |f| %>
<%= f.radio_button :pay_status,1, checked: "checked" %>
<%= f.label :銀行振込　%>

<%= f.radio_button :pay_status,0, checked: "checked" %>
<%= f.label :クレジットカード　%>
<% end %>

<h3>お届け先</h3>

<%= form_with do |f| %>
<%= f.radio_button :address_status,0, checked: "checked" %>
<%= f.label :ご自身の住所　%>
<%= '#'%></br>


<%= f.radio_button :address_status,1, checked: "checked" %>
<%= f.label :登録済住所から選択　%>
<%= '#' %></br>


<%= f.radio_button :address_status,2, checked: "checked" %>
<%= f.label :新しいお届け先　%></br>


<%= f.label :郵便番号 %>
<%= f.text_field :zip_code ,class: "form" %>
<a>ハイフンなし</a></br>

<%= f.label :住所 %>
<%= f.text_field :address,class: "form" %></br>

<%= f.label :宛名 %>
<%= f.text_field :name ,class: "form" %> 
<% end %>

<div class="go-button2">
<%= link_to "確認画面へ進む",'#',class: "btn btn-info" %>
</div>
